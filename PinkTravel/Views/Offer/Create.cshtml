@using ClientDependency.Core.Mvc
@using DotNetOpenAuth.OpenId.Extensions.AttributeExchange
@using PinkTravel.Models
@model PinkTravel.Models.Offer

@{
	ViewBag.Title = "Create";
	//Html.RequiresJsFolder("~/Scripts/jquery").RequiresJsFolder("~/Scripts/jquery-ui");
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Offer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<fieldset>
		<legend>Offer</legend>

		<div class="editor-label">
			@Html.LabelFor(model => model.HotelName)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.HotelName)
			@Html.ValidationMessageFor(model => model.HotelName)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.LocationName)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.LocationName)
			@Html.ValidationMessageFor(model => model.LocationName)
		</div>
		
		@Html.LabelFor(model => model.HotelImage)
		@Html.EditorFor(model => model.HotelImage, new { imageRatio = 16/9, minWidth = 700 })

		@Html.LabelFor(model => model.LocationImage)
		@Html.EditorFor(model => model.LocationImage, new { imageRatio = 16/9, minWidth = 700 })

		<p>
			<input type="submit" name="Create" />
		</p>
	</fieldset>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>