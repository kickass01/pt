@using ClientDependency.Core.Mvc
@model PinkTravel.Models.Offer

@{
    ViewBag.Title = "Edit";
    Html.RequiresJsBundle("~/Scripts/scripts/jquery");
    Html.RequiresJsBundle("~/Scripts/scripts/jqueryval");
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Offer</legend>

        @Html.HiddenFor(model => model.OfferId)

        <div class="editor-label">
            @Html.LabelFor(model => model.HotelName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HotelName)
            @Html.ValidationMessageFor(model => model.HotelName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LocationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LocationName)
            @Html.ValidationMessageFor(model => model.LocationName)
        </div>
        
        @Html.LabelFor(model => model.HotelImage)
        @Html.EditorFor(model => model.HotelImage, new { offerId = Model.OfferId, imageRatio = 16/9, minWidth = 700 })

        @Html.LabelFor(model => model.LocationImage)
        @Html.EditorFor(model => model.LocationImage, new { offerId = Model.OfferId, imageRatio = 16/9, minWidth = 700 })
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
